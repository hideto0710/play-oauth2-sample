# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.hideto0710.oauth2sample.api.controllers.Application.index

POST    /oauth/access_token         com.hideto0710.oauth2sample.api.controllers.OAuth2Controller.accessToken

POST    /users                      com.hideto0710.oauth2sample.api.controllers.UserController.insertUser
GET     /users                      com.hideto0710.oauth2sample.api.controllers.UserController.getUsers
GET     /users/$id<[0-9]+>          com.hideto0710.oauth2sample.api.controllers.UserController.getUser(id: Long)
DELETE  /users/$id<[0-9]+>          com.hideto0710.oauth2sample.api.controllers.UserController.deleteUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
